<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sharanjit.mycalculator.ComplexActivity">


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple"
        android:id="@+id/cbsimple"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Complex"
        android:id="@+id/cbcomplex"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextC"
        android:gravity="right"
        android:layout_weight="1.0"
        android:textSize="30sp"
        android:layout_below="@+id/cbsimple"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/cbcomplex"
        android:layout_alignEnd="@+id/cbcomplex" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Del"
        android:id="@+id/cbdel"
        android:layout_below="@+id/editTextC"
        android:layout_alignRight="@+id/bi"
        android:layout_alignEnd="@+id/bi" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="Sin"
        android:id="@+id/bsin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/cbdel" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="Cos"
        android:id="@+id/bcos"
        android:layout_alignTop="@+id/bsin"
        android:layout_toRightOf="@+id/bsin"
        android:layout_toEndOf="@+id/bsin" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="Tan"
        android:id="@+id/btan"
        android:layout_alignTop="@+id/bcos"
        android:layout_toRightOf="@+id/bcos"
        android:layout_toEndOf="@+id/bcos" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="i"
        android:id="@+id/bi"
        android:layout_alignTop="@+id/btan"
        android:layout_toRightOf="@+id/btan"
        android:layout_toEndOf="@+id/btan" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="ln"
        android:id="@+id/bln"
        android:layout_below="@+id/bsin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="log"
        android:id="@+id/blog"
        android:layout_below="@+id/bcos"
        android:layout_toRightOf="@+id/bln"
        android:layout_toEndOf="@+id/bln" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="π"
        android:id="@+id/bpi"
        android:layout_below="@+id/btan"
        android:layout_alignLeft="@+id/btan"
        android:layout_alignStart="@+id/btan" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="e"
        android:id="@+id/be"
        android:layout_below="@+id/bi"
        android:layout_toRightOf="@+id/btan"
        android:layout_toEndOf="@+id/btan" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="%"
        android:id="@+id/bmod"
        android:layout_below="@+id/bln"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="!"
        android:id="@+id/bex"
        android:layout_alignTop="@+id/bmod"
        android:layout_toRightOf="@+id/bmod"
        android:layout_toEndOf="@+id/bmod" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="√"
        android:id="@+id/bsq"
        android:layout_alignTop="@+id/bex"
        android:layout_alignLeft="@+id/bpi"
        android:layout_alignStart="@+id/bpi" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="^"
        android:id="@+id/bca"
        android:layout_alignTop="@+id/bsq"
        android:layout_toRightOf="@+id/bsq"
        android:layout_toEndOf="@+id/bsq" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text="("
        android:id="@+id/bstbr"
        android:layout_below="@+id/bmod"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text=")"
        android:id="@+id/benbr"
        android:layout_below="@+id/bex"
        android:layout_toRightOf="@+id/bstbr"
        android:layout_toEndOf="@+id/bstbr" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text=" "
        android:id="@+id/bblank1"
        android:layout_below="@+id/bsq"
        android:layout_alignLeft="@+id/bsq"
        android:layout_alignStart="@+id/bsq" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="84dp"
        android:layout_height="84dp"
        android:text=" "
        android:id="@+id/bblank2"
        android:layout_below="@+id/bca"
        android:layout_toRightOf="@+id/bblank1"
        android:layout_toEndOf="@+id/bblank1" />

</RelativeLayout>
